<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ActivityInventario">

    <RelativeLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/orange_200"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/roundcorner"
            android:contentDescription="@string/profilePictureDescription"
            app:srcCompat="@drawable/default_avatar_photo_placeholder_profile_picture_default_avatar_photo_placeholder_profile_picture_eps_file_easy_to_edit_125707135" />

        <ImageButton
            android:id="@+id/logoutButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/orange_200"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logout"
            android:padding="5dp"
            android:contentDescription="@string/logoutButtonDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/navbarLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/appBar"
        android:paddingHorizontal="20dp"
        android:background="@color/orange_500"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/inventarioButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/inventario_png"
            android:background="@drawable/roundcorner"
            android:padding="10dp"
            android:contentDescription="@string/inventarioButtonDescription" />

        <ImageButton
            android:id="@+id/agregarButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/agregar_icon"
            android:background="@drawable/roundcorner"
            android:padding="10dp"
            android:contentDescription="@string/agregarButtonDescription" />

        <ImageButton
            android:id="@+id/escanearButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/qricon"
            android:background="@drawable/roundcorner"
            android:padding="10dp"
            android:contentDescription="@string/escanearButtonDescription" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/navbarLayout"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navbarLayout" />

</RelativeLayout>